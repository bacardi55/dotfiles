[alias]
  browse       = !hub browse
  w            = !hub browse
  compare      = !hub compare
  cb           = !git-cut-branch
  sh           = !git-sh
  grab         = !git-grab
  thanks       = !git-thanks
  track        = !git-track
  lg           = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  wip          = !git add -u && git commit -m ...
  wipc         = !date >> WIP && git add WIP && git commit -m ...
  fp           = format-patch --stdout
  ci           = commit
  x            = checkout HEAD
  bv           = !git branch --color -v | cut -c1-100
  incoming     = !git-incoming
  in           = !git-incoming
  outgoing     = !git-outgoing
  out          = !git-outgoing
  s            = status -sb -uno --ignore-submodules=untracked
  st           = status
  sa           = status -sb --ignore-submodules=untracked
	ci           = commit
	co           = checkout
	br           = branch
  cp           = cherry-pick
  wdiff        = diff --word-diff

[core]
  editor = vim
  pager = most
  filemode = true
  logallrefupdates = true
  whitespace = space-before-tab, trailing-space
	excludesfile = ~/.gitignore

[help]
  browser = open
  autocorrect = 1

[branch]
  autosetupmerge = true

[diff]
  renames = copies
  mnemonicprefix = true

[push]
  default = current

[pull]
  rebase = true

