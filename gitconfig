[alias]
  browse       = !hub browse
  w            = !hub browse
  compare      = !hub compare
  cb           = !git-cut-branch
  sh           = !git-sh
  grab         = !git-grab
  thanks       = !git-thanks
  track        = !git-track
  ll           = log --pretty=oneline --abbrev-commit --max-count=15
  wip          = !git add -u && git commit -m ...
  wipc         = !date >> WIP && git add WIP && git commit -m ...
  fp           = format-patch --stdout
  ci           = commit
  x            = checkout HEAD
  bv           = !git branch --color -v | cut -c1-100
  incoming     = !git-incoming
  in           = !git-incoming
  outgoing     = !git-outgoing
  out          = !git-outgoing
  s            = status -sb -uno --ignore-submodules=untracked
  st           = status
  sa           = status -sb --ignore-submodules=untracked
	ci           = commit
	co           = checkout
	br           = branch
	funcdiff     = !sh -c \"git show \\\"\\$1:\\$3\\\" | sed -n \\\"/^[^ \\t].*\\$4(/,/^}/p\\\" > .tmp1 && git show \\\"\\$2:\\$3\\\" | sed -n \\\"/^[^ \\t].*\\$4(/,/^}/p\\\" > .tmp2 && git diff --no-index .tmp1 .tmp2\"
  cp           = cherry-pick

[core]
  filemode = true
  logallrefupdates = true
  whitespace = space-before-tab, trailing-space
	excludesfile = ~/.gitignore

[help]
  browser = open

[branch]
  autosetupmerge = true

[diff]
  renames = copies
  mnemonicprefix = true

[push]
  default = current

