# i3 config file (v4)
#
# Please see http://i3wm.org/docs/userguide.html for a complete reference!

set $mod Mod4

# font for window titles. ISO 10646 = Unicode
font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1

# back_and_forth feature
workspace_auto_back_and_forth yes

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec urxvtc
bindsym $mod+r exec urxvtc

# kill focused window
bindsym $mod+Shift+A kill

# start dmenu (a program launcher)
bindsym $mod+d exec dmenu_run

# change focus
bindsym $mod+j focus left
bindsym $mod+k focus down
bindsym $mod+l focus up
bindsym $mod+m focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+J move left
bindsym $mod+Shift+K move down
bindsym $mod+Shift+L move up
bindsym $mod+Shift+M move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# default orientation
default_orientation auto

# split in horizontal orientation
bindsym $mod+v split h

# split in vertical orientation
bindsym $mod+h split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen

# change container layout (stacked, tabbed, default)
bindsym $mod+s layout stacking
bindsym $mod+z layout tabbed
bindsym $mod+e layout default

# toggle tiling / floating
bindsym $mod+Shift+f floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+q focus parent

# focus the child container
bindcode $mod+Shift+q focus child

# switch to workspace
#bindsym $mod+ workspace 1
bindsym $mod+ampersand workspace 1: www
bindsym $mod+eacute workspace 2: dev
bindsym $mod+quotedbl workspace 3: mail
bindsym $mod+apostrophe workspace 4: irc
bindsym $mod+parenleft workspace 5: misc
bindsym $mod+minus workspace 6: misc
bindsym $mod+egrave workspace 7: misc
bindsym $mod+underscore workspace 8: misc
bindsym $mod+ccedilla workspace 9: misc
bindsym $mod+agrave workspace 10: im

# switch next/prev
bindsym $mod+mod1+Left workspace prev
bindsym $mod+mod1+Right workspace next

# move focused container to workspace
bindsym $mod+Shift+1 move workspace 1: www
bindsym $mod+Shift+2 move workspace 2: dev
bindsym $mod+Shift+3 move workspace 3: mail
bindsym $mod+Shift+4 move workspace 4: irc
bindsym $mod+Shift+5 move workspace 5: misc
bindsym $mod+Shift+6 move workspace 6: misc
bindsym $mod+Shift+7 move workspace 7: misc
bindsym $mod+Shift+8 move workspace 8: misc
bindsym $mod+Shift+9 move workspace 9: misc
bindsym $mod+Shift+0 move workspace 10: im

# reload the configuration file
bindsym $mod+Shift+C reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+R restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+E exit

# modification du son :
bindsym XF86AudioLowerVolume exec amixer set Master playback 5-
bindsym XF86AudioRaiseVolume exec amixer set Master playback 5+
bindsym XF86AudioMute exec amixer set Master toggle

# slock
bindsym Pause exec i3-msg workspace 8 && i3lock -i /home/bacardi55/images/akuSokuZan.png -d

# alt tab old school style
bindsym Mod1+Tab focus right
bindsym Mod1+Shift+Tab focus left

# Cmus
bindsym $mod+p exec cmus-remote -u
bindsym $mod+n exec cmus-remote -n
bindsym $mod+Shift+n exec cmus-remote -r

# LIGHT
bindsym XF86MonBrightnessUp exec light.sh +
bindsym XF86MonBrightnessDown exec light.sh -

# To search for a a program by name:
bindsym mod1+F1 exec python ~/workspace/perso/i3-wm-scripts/nextfind.py

# To mark a window for jumping back to:
bindsym mod1+F2 exec ~/workspace/perso/i3-wm-scripts/mark

# To use dmenu to jump back to a particular program:
bindsym mod1+F3 exec ~/workspace/perso/i3-wm-scripts/goto


